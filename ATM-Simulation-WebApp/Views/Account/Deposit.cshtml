@{
    ViewData["Title"] = "Deposit";
}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm theme-card" style="padding-top: 90px;">
            <div class="card-body">  
                <h4>Deposit Money</h4>
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }
                <form method="post" action="/Account/Deposit">
                    <div class="mb-3">
                        <label class="form-label">Amount (â‚¹)</label>
                        <input name="amount" type="number" step="0.01" class="form-control" required />
                    </div>
                    <button class="btn btn-theme">Deposit</button>
                    <a class="btn btn-link" href="/Account/Dashboard">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
